{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": false,
        "outDir": "./dist",
        "rootDir": "./",
        "removeComments": true,
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "./logs",
        "./test-results",
        "./playwrite-report",
        "./node_modules",
        "./logs"
    ]
}